{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "images"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": {
        "preset": "defaultHtml"
      },
      "required": false
    },
    "metadata": {
      "type": "boolean",
      "private": true,
      "default": false
    },
    "materials": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "metadata"
            },
            true
          ]
        }
      },
      "required": false
    },
    "dimension": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "metadata"
            },
            true
          ]
        }
      },
      "required": false
    },
    "CTA": {
      "type": "component",
      "component": "utilities.link",
      "repeatable": false,
      "required": false
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": ["images", "videos"]
    },
    "Generate_Slug": {
      "type": "boolean",
      "private": true,
      "required": true
    },
    "slug": {
      "type": "uid",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "Generate_Slug"
            },
            true
          ]
        }
      },
      "targetField": "name",
      "required": true,
      "regex": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "project": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::project.project",
      "inversedBy": "products"
    },
    "shopifyBuyButton": {
      "type": "boolean",
      "default": false
    },
    "shopifyProductId": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "shopifyBuyButton"
            },
            true
          ]
        }
      },
      "required": true
    }
  }
}
